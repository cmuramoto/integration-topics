{
    "tasks": [
        {
            "type": "shell",
            "label": "compile-proto-files",
            "command" : "cp resources/test_zmq.proto . && protoc --c_out=. test_zmq.proto && gcc -c -Wall -Werror test_zmq.pb-c.c && ar -rc libtest_zmq.pb-c_static.a  test_zmq.pb-c.o && rm -f test_zmq*"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc-9 build active file",
            "command": "/usr/bin/gcc-9",
            "dependsOn": [
                "compile-proto-files"
            ],
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-L/usr/local/lib/",
                "-L/usr/lib/x86_64-linux-gnu",
                "${file}",
                "libtest_zmq.pb-c_static.a",
                "-lnats",
                "-lprotobuf-c",
                "-lpthread",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.bin"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}